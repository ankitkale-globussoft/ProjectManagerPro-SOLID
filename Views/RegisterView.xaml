<UserControl
    x:Class="ProjectManagerPro_SOLID.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectManagerPro_SOLID.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ProjectManagerPro_SOLID.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:RegisterViewModel />
    </UserControl.DataContext>
    <Grid MouseDown="Grid_MouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Viewbox
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Stretch="Uniform">
                <StackPanel
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <TextBlock
                        FontSize="26"
                        FontWeight="Bold"
                        Text="ProjectManager Pro"
                        TextAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0.0" Color="#1565C0" />
                                <GradientStop Offset="1.0" Color="#318CE7" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>

                    </TextBlock>

                    <Image
                        Width="200"
                        Height="200"
                        Source="/Assets/Images/register-image.png"
                        Stretch="Uniform" />

                    <TextBlock
                        MaxWidth="300"
                        FontSize="12"
                        Foreground="Gray"
                        Text="Your Projects, One Account Away."
                        TextAlignment="Center"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Viewbox>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Offset="0.0" Color="#ADD8E6" />
                    <GradientStop Offset="1.0" Color="#E0FFFF" />
                </LinearGradientBrush>
            </Grid.Background>

            <StackPanel
                Width="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="35"
                    FontWeight="Bold"
                    Text="Register Now"
                    TextWrapping="Wrap" />

                <TextBlock Text="Username" />
                <TextBox
                    Margin="0,0,0,10"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Foreground="Red"
                    Text="{Binding UsernameError}" />

                <TextBlock Text="Password" />
                <PasswordBox
                    x:Name="PasswordBox"
                    Margin="0,0,0,10"
                    PasswordChanged="PasswordBox_PasswordChanged" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Foreground="Red"
                    Text="{Binding PasswordError}" />

                <TextBlock Text="Select Role" />
                <ComboBox
                    Margin="0,0,0,10"
                    FontSize="24"
                    ItemsSource="{Binding Roles}"
                    SelectedItem="{Binding SelectedRole}" />
                <CheckBox
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Remember Me"
                    FontSize="16"
                    IsChecked="{Binding RememberMe}" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Foreground="Red"
                    Text="{Binding RoleError}" />
                <StackPanel
                    x:Name="ProgressBarStatus"
                    Margin="0,0,0,10"
                    Orientation="Horizontal"
                    Visibility="{Binding ProgressEnable}">
                    <TextBlock
                        FontFamily="Cascadia Code"
                        FontSize="14"
                        Foreground="Black"
                        Text="Processing" />
                    <ProgressBar
                        Width="100"
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        BorderThickness="0"
                        Foreground="PaleVioletRed"
                        IsIndeterminate="True" />
                </StackPanel>
                <Button Command="{Binding RegisterCommand}" Content="Register" />

                <Button
                    Margin="0,10,0,0"
                    Command="{Binding GoToLoginCommand}"
                    Content="Back to Login"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
